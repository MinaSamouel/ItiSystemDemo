@model MVCWithEntity.ViewModel.DepartmentWithStudents
@{
    ViewBag.Title = "ManageStudent";
}


<div class="container">
    <h1 class="text-center text-primary"> Student Enrolled In Department</h1>

    <table class="table">
        <thead class="table-info">
        <tr>
            <th> StudentId</th>
            <th> StudentName</th>
            <th> Operation</th>
        </tr>
        </thead>
        <tbody class="table-warning">
        @if (@Model.StudentsEnrolled.Count() == 0)
        {
            <tr>
                <td colspan="3" class="bg-danger text-center">No data to show</td>
            </tr>   
        }
        else
        {
            @foreach (var item in Model.StudentsEnrolled)
            {
                <tr>
                    <td> @item.Id</td>
                    <td> @item.Name</td>
                    <td>
                        <a class="btn btn-danger" asp-action="RemoveFromDepartment" asp-controller="Department"asp-route-studentId="@item.Id"asp-route-departmentId="@Model.Department.Id">Delete From Department</a>

                    </td>
                </tr>
            }
        }
        </tbody>

    </table>

    <h1 class="text-center text-primary"> StudentNotEnrolled</h1>
    
    <table class="table">
        <thead class="table-info">
        <tr>
            <th> StudentId</th>
            <th> StudentName</th>
            <th> Operation</th>
        </tr>
        </thead>
        <tbody class="table-warning">
        @if (@Model.StudentsNotEnrolled.Count() == 0)
        {
            <tr>
                <td colspan="3" class="bg-danger text-center">No data to show</td>
            </tr>   
        }
        else
        {
            @foreach (var item in Model.StudentsNotEnrolled)
            {
                <tr>
                    <td> @item.Id</td>
                    <td> @item.Name</td>
                    <td>
                        <a class="btn btn-success" asp-action="AddToDepartment" asp-controller="Department"
                           asp-route-studentId="@item.Id" asp-route-departmentId="@Model.Department.Id">Add To Department</a>
                    </td>
                </tr>
            }
        }
        </tbody>
    </table>
    <a class="btn btn-secondary" asp-action="Index" asp-controller="Department">Got to Index</a>

</div>

