@model Department
@{
    ViewBag.Title = "Create Department";
}

<div class="container">
    <form method="post" class="mt-5">
        <div class="mb-3">
            <label asp-for="Id" class="form-label">Department Id</label>
            <input asp-for="Id" class="form-control" placeholder="Department Id">
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Department Name</label>
            <input class="form-control" placeholder="Department Name" asp-for="Name" >
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="text-center text-danger" asp-validation-summary="ModelOnly"></div>                
        <input type="submit" class="btn btn-primary" value="add">
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Department">Got to Index</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}




