@model Course
@{
    ViewBag.Title = "Course Details";
}


<div class="container">
    <form class="mt-3" method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"> CourseName</label>
            <input asp-for="Name" class="form-control" placeholder="CourseName" readonly/>
        </div>
        <div class="mb-3">
            <label asp-for="Hours" class="form-label"> CourseHour</label>
            <input asp-for="Hours" class="form-control" placeholder="CourseHour" readonly/>
        </div>

        <a class="btn btn-dark" asp-action="Index" asp-controller="Course">Go to index</a>

    </form>
</div>

